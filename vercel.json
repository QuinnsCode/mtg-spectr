{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ],
  "env": {
    "API_PROVIDER": "scryfall",
    "USE_MOCK_API": "false"
  },
  "functions": {
    "app.py": {
      "maxDuration": 30
    }
  }
}